<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/pointer_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pointer">

    <Button
        android:id="@+id/main_id"
        android:layout_margin="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#fcf9f1"
        android:textSize="28sp"
        android:text="BASIC POINTER"
        android:background="#2e3535"
        android:layout_width="250dp"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/pointto_id"
        android:layout_margin="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#fcf9f1"
        android:textSize="28sp"
        android:text="POINTER TO POINTER"
        android:background="#2e3535"
        android:layout_width="250dp"
        android:layout_height="70dp" />


    <Button
        android:id="@+id/arithmatic_id"
        android:layout_margin="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#fcf9f1"
        android:textSize="28sp"
        android:text="ARITHMATIC POINTER"
        android:background="#2e3535"
        android:layout_width="250dp"
        android:layout_height="70dp" />


</LinearLayout>